<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#525761"
    tools:context=".MainActivity">

<!--    Digunakan untuk mendeklarasikan layout menjadi Relative-->
    <RelativeLayout
        android:layout_width="371dp"
        android:layout_height="619dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="125dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="106dp"
        android:background="#004682A9"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="451dp"
            android:backgroundTint="#DD3E1C"
            android:text="@string/toast_message"
            android:textColor="#ffffff"
            app:cornerRadius="0dp" />

        <TextView
            android:id="@+id/show_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="-1dp"
            android:layout_marginTop="120dp"
            android:layout_marginEnd="135dp"
            android:layout_marginRight="-236dp"
            android:layout_toLeftOf="@+id/button3"
            android:layout_toEndOf="@+id/button2"
            android:background="#959FB2"
            android:text="@string/inital_show_count"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="180dp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="400dp"
            android:backgroundTint="#DD3E1C"
            android:text="Count"
            android:textColor="#ffffff"
            app:cornerRadius="0dp"/>

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="350dp"
            android:backgroundTint="#DD3E1C"
            android:onClick="reset"
            android:text="Reset Count"
            android:textColor="#ffffff"
            app:cornerRadius="0dp"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>