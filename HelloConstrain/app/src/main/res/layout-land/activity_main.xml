<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#525761"
    tools:context=".MainActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/relativeLayout"
            android:layout_width="521dp"
            android:layout_height="368dp"
            android:layout_marginStart="49dp"
            android:layout_marginTop="125dp"
            android:layout_marginEnd="49dp"
            android:layout_marginBottom="106dp"
            android:background="#004682A9"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

                <Button
                    android:id="@+id/button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="288dp"
                    android:backgroundTint="#DD3E1C"
                    android:text="@string/toast_message"
                    android:textColor="#ffffff"
                    app:cornerRadius="0dp"
                    android:onClick="showToast"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/show_count"
                    android:layout_width="275dp"
                    android:layout_height="224dp"
                    android:layout_marginStart="-1dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="135dp"
                    android:background="#959FB2"
                    android:text="@string/inital_show_count"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textSize="180dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintRight_toLeftOf="@+id/button3"
                    app:layout_constraintStart_toEndOf="@+id/button2"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="240dp"
                    android:backgroundTint="#DD3E1C"
                    android:text="Count"
                    android:textColor="#ffffff"
                    app:cornerRadius="0dp"
                    android:onClick="countUp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="180dp"
                    android:backgroundTint="#DD3E1C"
                    android:onClick="reset"
                    android:text="Reset Count"
                    android:textColor="#ffffff"
                    app:cornerRadius="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>