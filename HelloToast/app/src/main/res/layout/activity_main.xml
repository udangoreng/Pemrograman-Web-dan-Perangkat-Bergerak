<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#525761"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="354dp"
        android:layout_height="622dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="73dp"
        android:background="#004682A9"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#DD3E1C"
            android:onClick="showToast"
            android:text="@string/toast_message"
            android:textColor="#ffffff"
            app:cornerRadius="0dp" />
        <!--@string/toast_message berfungsi untuk memanggil string yang ada di values/strings.xml-->
        <TextView
            android:id="@+id/show_count"
            android:layout_width="match_parent"
            android:layout_height="474dp"
            android:background="#959FB2"
            android:paddingTop="125dp"
            android:text="@string/inital_show_count"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="180dp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#DD3E1C"
            android:onClick="countUp"
            android:text="Count"
            android:textColor="#ffffff"
            app:cornerRadius="0dp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#DD3E1C"
            android:onClick="reset"
            android:text="Reset Count"
            android:textColor="#ffffff"
            app:cornerRadius="0dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>